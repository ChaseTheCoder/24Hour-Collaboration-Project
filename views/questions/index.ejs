            </div>

            <h1>Express</h1>
      
              <%  questions.forEach(question => { %>
            <div>
                  <% if(question.languageId === "Express" && questions < 5) { %>
                <a href="/questions/<%=` ${question.id} `%>">
                    <%= question.question %>
                </a>
                <% } %>
             <%  }); %>
            </div>
    
    </main>
</body>
</html>