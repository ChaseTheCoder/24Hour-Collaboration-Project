<body>
    <%- include ('../partials/header.ejs'); -%>

    <main>
        <h1>Questions!</h1>
        <h1> HTML</h1>
      
        <%  questions.forEach(question => { %>
            <div>
                
                  <% if(question.languageId === "HTML") { %>
                <a href="/questions/<%=` ${question.id} `%>"> 
                    <%= question.question %>
                </a> 
                <% } else { %>
                   <%= console.log('error'); %>
               <% } %>
                <% }); %>
            </div>
      
        <h1>CSS</h1>
      
              <%  questions.forEach(question => { %>
            <div>
                  <% if(question.languageId === "CSS") { %>
                <a href="/questions/<%=` ${question.id} `%>">
                    <%= question.question %>
                </a>
                <% } %>
             <%  }); %>
            </div>

            <h1>Javascript</h1>
      
              <%  questions.forEach(question => { %>
